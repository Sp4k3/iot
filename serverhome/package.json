{
  "name": "server",
  "description": "server part",
  "author": "Thibault COLIN",
  "license": "MIT",
  "version": "0.1.0",
  "main": "src/server.js",
  "type": "module",
  "cacheDirectories": [
    "node_modules"
  ],
  "engines": {
    "node": ">= 15.0.0",
    "npm": "7"
  },
  "scripts": {
    "dev": "nodemon --inspect --experimental-json-modules src/server.js",
    "start": "pm2-runtime start --name 'api' node -- --experimental-json-modules src/server.js",
    "stop": "pm2 stop api",
    "logs": "pm2 logs api",
    "lint": "eslint src",
    "format": "eslint --cache --fix src",
    "format:client": "cd .. ; cd client ; npm run lint",
    "format:all": "run-p format format:client --",
    "pretest": "npm run lint",
    "test": "jest --testTimeout=20000",
    "test:watch": "jest --watchAll",
    "test:client": "cd .. ; cd client ; npm run test",
    "test:all": "run-s test test:client"
  },
  "dependencies": {
    "actions-on-google": "^2.13.0",
    "body-parser": "^1.19.0",
    "casper": "^0.1.1",
    "cheerio": "1.0.0-rc.5",
    "cors": "^2.8.5",
    "date-fns": "^2.17.0",
    "date-fns-tz": "^1.1.2",
    "delay": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-basic-auth": "1.2.0",
    "localenv": "^0.2.2",
    "morgan": "^1.10.0",
    "node-hue-api": "5.0.0-beta.2",
    "node-schedule": "^2.0.0",
    "nodemon": "^2.0.7",
    "phantom": "^6.3.0",
    "pm2": "^4.5.4",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "socket.io": "^3.1.1",
    "socketio-auth": "^0.1.1",
    "spooky": "^0.2.5",
    "sync-request": "^6.1.0",
    "telnet-client": "^1.4.6",
    "uuid": "^8.3.2",
    "webpage": "^0.3.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.0",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/preset-env": "^7.12.11",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/mongoose": "^5.10.3",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "faker": "^5.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "standard": "^16.0.3",
    "supertest": "^6.1.1"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/src/__tests__/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec).{js,mjs}"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|mjs)$"
    ]
  }
}